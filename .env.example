# Octavia Interview Buddy - Environment Configuration Template
# Copy this file to .env.local for development

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
VITE_APP_NAME="Octavia Interview Buddy"
VITE_APP_VERSION="1.0.0"
VITE_APP_ENVIRONMENT="development"

# =============================================================================
# API CONFIGURATION
# =============================================================================
VITE_API_URL="http://localhost:3001/api"
VITE_API_TIMEOUT="30000"

# =============================================================================
# VAPI INTEGRATION (Voice AI)
# =============================================================================
VITE_VAPI_URL="https://api.vapi.ai"
VITE_VAPI_PUBLIC_KEY="your_vapi_public_key_here"
VAPI_PRIVATE_KEY="your_vapi_private_key_here"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET="your_jwt_secret_key_here_min_32_chars"
JWT_EXPIRES_IN="7d"
BCRYPT_ROUNDS="12"
SESSION_SECRET="your_session_secret_here"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/octavia_interview_buddy"
DATABASE_SSL="false"
DATABASE_POOL_MIN="2"
DATABASE_POOL_MAX="10"

# =============================================================================
# REDIS CONFIGURATION (for caching and sessions)
# =============================================================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# =============================================================================
# FILE STORAGE (AWS S3 or compatible)
# =============================================================================
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="octavia-interview-files"
AWS_S3_RESUME_FOLDER="resumes"
AWS_S3_RECORDINGS_FOLDER="interview-recordings"

# =============================================================================
# EMAIL SERVICE (SendGrid)
# =============================================================================
SENDGRID_API_KEY="your_sendgrid_api_key_here"
FROM_EMAIL="noreply@octavia-interview.com"
FROM_NAME="Octavia Interview Buddy"

# =============================================================================
# PAYMENT PROCESSING (Stripe)
# =============================================================================
VITE_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# Google OAuth (optional)
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"

# Microsoft OAuth (optional)
MICROSOFT_CLIENT_ID="your_microsoft_client_id"
MICROSOFT_CLIENT_SECRET="your_microsoft_client_secret"

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
SENTRY_DSN="your_sentry_dsn_for_error_tracking"
LOG_LEVEL="debug"

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN="http://localhost:8080,https://yourdomain.com"

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
VITE_ENABLE_DEVTOOLS="true"
VITE_MOCK_API="false"
ENABLE_API_DOCS="true"